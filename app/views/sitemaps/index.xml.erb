<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
   <url>
      <loc><%= @host %></loc>
      <lastmod><%= Time.now.strftime("%Y-%m-%dT%H:%M:%S")%></lastmod>
   </url>
  
   <% @steps.each do |step| %>
     <url>
        <loc><%= "#{@host}" + "#{new_registration_path step.underscore}" %></loc>
        <lastmod><%= Time.now.strftime("%Y-%m-%dT%H:%M:%S")%></lastmod>
     </url>
   <% end %>
</urlset>