<div class="govuk-form-group">

  <%= link_to 'Back', 'javascript:history.go(-1);', class: "govuk-back-link" %> 
    
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
                Are you returning to teaching?
            </h1>
        </legend>
        
      <%= form_for @returning_to_teaching do |f| %>
        
        <div class="govuk-form-group">
            <div class="govuk-radios govuk-radios--inline">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="returning-to-teaching" name="returning_to_teaching[returning_to_teaching]" type="radio" value=true>
                    <label class="govuk-label govuk-radios__label" for="returning-to-teaching">
                        Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="returning-to-teaching-2" name="returning_to_teaching[returning_to_teaching]" type="radio" value=false>
                    <label class="govuk-label govuk-radios__label" for="returning-to-teaching-2">
                        No
                    </label>
                </div>
            </div>
        </div>

        <div class="govuk-form-group">
           <%= f.submit :Continue, class: 'govuk-button auto-width' %>
        </div>

      <% end %>
    </fieldset>
</div>