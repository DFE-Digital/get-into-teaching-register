<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    Telephone
  </dt>
  <dd class="govuk-summary-list__value">
    <p class="govuk-body"><%= show_phone %></p>
  </dd>
  <dd class="govuk-summary-list__actions">
    <% if defined?(link) && link == Equivalent::LINK %>
        <%= show_link("#{link}" + 'overseas_candidate') %>
      <% else %>
        <%= show_link("#{link}" + 'overseas_telephone') %>
      <% end %>
    <% else %>
      <%= show_link('overseas_telephone') %>
    <% end %>
  </dd>
</div>