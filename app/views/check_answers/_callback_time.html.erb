<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    Callback time
  </dt>
  <dd class="govuk-summary-list__value">
    <p class="govuk-body"><%= show_callback_time %></p>
  </dd>
  <dd class="govuk-summary-list__actions">
    <% if defined?(link) %>
      <%= show_link("#{link}" + 'overseas_callback') %>
    <% else %>
      <%= show_link('overseas_callback') %>
    <% end %>
  </dd>
</div>