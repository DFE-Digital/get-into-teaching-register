<div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
                What is your address?
            </h1>
        </legend>

        <div class="govuk-form-group">
            <label class="govuk-label" for="address-line-1" maxlength="8">
                Address line 1 *
            </label>
            <input class="govuk-input govuk-input--width-20" id="address-line-1" name="address-line-1" type="text">
        </div>

        <div class="govuk-form-group">
            <label class="govuk-label" for="address-line-2" maxlength="8">
                Address line 2 *
            </label>
            <input class="govuk-input govuk-input--width-20" id="address-line-2" name="address-line-2" type="text">
        </div>

        <div class="govuk-form-group">
            <label class="govuk-label" for="town-city" maxlength="8">
                Town or city *
            </label>
            <input class="govuk-input govuk-input--width-20" id="town-city" name="town-city" type="text">
        </div>

        <div class="govuk-form-group">
            <label class="govuk-label" for="postcode" maxlength="8">
                Postcode *
            </label>
            <input class="govuk-input govuk-input--width-20" id="postcode" name="postcode" type="text">
        </div>

        <div class="govuk-form-group">
            <button class="govuk-button auto-width" data-module="govuk-button">
                Continue
            </button>
        </div>
    </fieldset>
</div>