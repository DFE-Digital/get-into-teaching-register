<div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
                What subject is your degree?
            </h1>
        </legend>

        <div class="govuk-form-group">
            <label class="govuk-label" for="sort">
            Degree subject
            </label>
            <select class="govuk-select" id="degree-subject" name="degree-subject">
                <option value="Accounting">Accounting</option>
                <option value="Business Studies" selected>Business Studies</option>
                <option value="Computer Science">Computer Science</option>
                <option value="Digital Media">Digital Media</option>
            </select>
        </div>

        <div class="govuk-form-group">
            <button class="govuk-button auto-width" data-module="govuk-button">
                Continue
            </button>
        </div>
    </fieldset>
</div>