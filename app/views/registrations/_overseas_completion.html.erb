<div class="govuk-form-group">

    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
                Check your answers
            </h1>
        </legend>
       
        <%= f.hidden_field :confirmed, value: true %>

        <div class="govuk-form-group">
            <h3>
               What is your name and email?
            </h3>
            <p class="govuk-body"><%= show_name_and_email %></p>
            <p class="govuk-body"><%= show_link('identity') %>
        </div>

        <div class="govuk-form-group">
            <h3>
               Are you returning to teaching?
            </h3>
            <p class="govuk-body"><%= show_session('returning_to_teaching')%></p>
            <p class="govuk-body"><%= show_link('returning_teacher') %>
        </div>

        <div class="govuk-form-group">
            <h3>
                Are you qualified to teach Primary or Secondary?
            </h3>
            <p class="govuk-body"><%= show_session('primary_or_secondary') %></p>
            <p class="govuk-body"><%= show_link('primary_or_secondary') %>
        </div>

        <div class="govuk-form-group">
            <h3>
                What subject are you qualified to teach?
            </h3>
            <p class="govuk-body"><%= show_session('qualified_subject') %></p>
            <p class="govuk-body"><%= show_link('qualified_to_teach') %>
        </div>

        <div class="govuk-form-group">
            <h3>
                What is your date of birth?
            </h3>
            <p class="govuk-body"><%= show_dob %></p>
            <p class="govuk-body"><%= show_link('date_of_birth') %>
        </div>

        <div class="govuk-form-group">
            <h3>
                Where do you live, Uk or Overseas?
            </h3>
            <p class="govuk-body"><%= show_session('uk_or_overseas') %></p>
            <p class="govuk-body"><%= show_link('uk_or_overseas') %>
        </div>

        <div class="govuk-form-group">
            <h3>
                Telephone number.
            </h3>
            <p class="govuk-body"><%= show_session('telephone_number') %></p>
            <p class="govuk-body"><%= show_link('overseas_candidate') %>
        </div>

        <div class="govuk-form-group">
            <h3>
                Callback Date.
            </h3>
            <p class="govuk-body"><%= show_session('callback_date').gsub('_',' ').titleize %></p>
            <p class="govuk-body"><%= show_link('overseas_candidate') %>
        </div>

        <div class="govuk-form-group">
            <h3>
                Callback Time.
            </h3>
            <p class="govuk-body"><%= show_session('callback_time') %>&nbsp;hrs</p>
            <p class="govuk-body"><%= show_link('overseas_candidate') %>
        </div>

        <div class="govuk-form-group">
            <%= f.submit :Continue, class: 'govuk-button auto-width' %>
        </div>

    </fieldset>
</div>