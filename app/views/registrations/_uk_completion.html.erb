<div class="govuk-width-container">

  <main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds-from-desktop">

        <h1 class="govuk-heading-l">Check your answers before sending your application</h1>

        <h2 class="govuk-heading-m">Personal details</h2>

        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Name
            </dt>
            <dd class="govuk-summary-list__value">
              <%= show_name %>
            </dd>
            <dd class="govuk-summary-list__actions">
              <%= show_link('identity') %>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Date of birth
            </dt>
            <dd class="govuk-summary-list__value">
             <%= show_dob %>
            </dd>
            <dd class="govuk-summary-list__actions">
             <%= show_link('date_of_birth') %> 
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Address
            </dt>
            <dd class="govuk-summary-list__value">
              <%= show_uk_address %>
            </dd>
            <dd class="govuk-summary-list__actions">
              <%= show_link('uk_candidate')%>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Contact details
            </dt>
            <dd class="govuk-summary-list__value">
              <p class="govuk-body"><%= show_email %></p>
            </dd>
            <dd class="govuk-summary-list__actions">
              <%= show_link('identity')%>
            </dd>
          </div>
        </dl>

        <h2 class="govuk-heading-m">Application details</h2>

        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Returning to teaching?
            </dt>
            <dd class="govuk-summary-list__value">
              <%= show_session('returning_to_teaching') %>
            </dd>
            <dd class="govuk-summary-list__actions">
              <%= show_link('returning_teacher') %>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Qualified to teach Primary or Secondary?
            </dt>
            <dd class="govuk-summary-list__value">
              <%= show_session('primary_or_secondary')%>
            </dd>
            <dd class="govuk-summary-list__actions">
              <%= show_link('primary_or_secondary')%>
            </dd>
          </div>
          
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              What subject are you qualified to teach?
            </dt>
            <dd class="govuk-summary-list__value">
              <%= show_session('qualified_subject')%>
            </dd>
            <dd class="govuk-summary-list__actions">
              <%= show_link('qualified_to_teach')%>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Where do you live?
            </dt>
            <dd class="govuk-summary-list__value">
              <%= show_session('uk_or_overseas') %>
            </dd>
            <dd class="govuk-summary-list__actions">
              <%= show_link('uk_or_overseas') %>
            </dd>
          </div>

           <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              What is your address?
            </dt>
            <dd class="govuk-summary-list__value">
              <%= show_uk_address %>
            </dd>
            <dd class="govuk-summary-list__actions">
              <%= show_link('uk_candidate') %>
            </dd>
          </div>
        </dl>

        <%= f.hidden_field :confirmed, value: true %>

        <div class="govuk-form-group">
            <%= f.submit :Continue, class: 'govuk-button auto-width' %>
        </div>

      </div>
    </div>
  </main>
</div>