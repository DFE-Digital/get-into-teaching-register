<div class="govuk-width-container">

  <main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds-from-desktop">

        <h1 class="govuk-heading-l">Check your answers before you continue</h1>

        <h2 class="govuk-heading-m">Personal details</h2>

        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
          <%= render 'check_answers/name' %>
          <%= render 'check_answers/studying/date_of_birth' %>
          <%= render 'check_answers/email' %> 
          <%= render 'check_answers/studying/telephone' %>
        </dl>

        <h2 class="govuk-heading-m">What you've told us</h2>

        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
          <%= render 'check_answers/returning_teacher' %>
          <%= render 'check_answers/have_a_degree' %>
          <%= render 'check_answers/studying/what_subject_degree' %>
          <%= render 'check_answers/studying/stage_interested_teaching' %>

          <!-- Primary options -->
          <% if session[:registration]['primary_or_secondary'] == 'primary' %>
            <%= render 'check_answers/studying/science_grade4' %>
            <%= render 'check_answers/studying/primary_maths_english_grade4' %>
          <% end %>

          <!-- Secondary options -->
          <% if session[:registration]['primary_or_secondary'] == 'secondary' %>
            <%= render 'check_answers/studying/secondary_maths_english_grade4' %>
            <% if session[:registration]['has_required_subjects'] == 'no' %>
              <%= render 'check_answers/studying/retake_english_maths' %>
            <% end %>
          <% end %>

            <%= render 'check_answers/studying/subject_interested_teaching' %>
            <%= render 'check_answers/studying/start_teacher_training' %>
            <%= render 'check_answers/studying/uk_or_overseas' %>
            <%= render 'check_answers/studying/country_code' %>
            <%= render 'check_answers/studying/callback_date' %>
            <%= render 'check_answers/studying/callback_time' %>
        </dl>
        
        <%= f.hidden_field :confirmed, value: true %>

        <div class="govuk-form-group">
            <%= f.submit :Continue, class: 'govuk-button auto-width' %>
        </div>

      </div>
    </div>
  </main>
</div>