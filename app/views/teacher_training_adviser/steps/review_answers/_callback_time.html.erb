<% return unless answers.key?("phone_call_scheduled_at") %>

<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    Callback time
  </dt>
  <dd class="govuk-summary-list__value">
    <p class="govuk-body">
      <%= answers["phone_call_scheduled_at"].to_time.strftime("%H:%M") %>
    </p>
  </dd>
  <dd class="govuk-summary-list__actions">
  <% if answers["uk_or_overseas"] == SignUp::Steps::UkOrOverseas::OPTIONS[:uk] %>
    <%= link_to_change_answer(SignUp::Steps::UkCallback) %>
  <% else %>
      <%= link_to_change_answer(SignUp::Steps::OverseasCallback) %>
  <% end %>
  </dd>
</div>